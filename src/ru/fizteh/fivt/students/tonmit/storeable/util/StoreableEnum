package ru.fizteh.fivt.students.tonmit.storeable.util;

public enum StoreableEnum {
    INT(Integer.class, "int"),
    DOUBLE(Double.class, "double"),
    BYTE(Byte.class, "byte"),
    STRING(String.class, "String"),
    LONG(Long.class, "long"),
    BOOLEAN(Boolean.class, "boolean"),
    FLOAT(Float.class, "float");

    private final Class<?> boxedClass;
    private final String printedName;

    private StoreableEnum(Class<?> type, String name) {
        boxedClass = type;
        printedName = name;
    }

    public static StoreableEnum withPrintedName(String name) {
        for (StoreableEnum type : StoreableEnum.values()) {
            if (type.getPrintedName().equals(name)) {
                return type;
            }
        }
        throw new EnumConstantNotPresentException(StoreableEnum.class, name);
    }

    public static StoreableEnum fromBoxedClass(Class<?> cls) {
        for (StoreableEnum type : StoreableEnum.values()) {
            if (type.getBoxedClass().equals(cls)) {
                return type;
            }
        }
        throw new EnumConstantNotPresentException(StoreableEnum.class, cls.getSimpleName());
    }

    @Override
    public String toString() {
        return getPrintedName();
    }

    public Class<?> getBoxedClass() {
        return boxedClass;
    }

    public String getPrintedName() {
        return printedName;
    }
}
