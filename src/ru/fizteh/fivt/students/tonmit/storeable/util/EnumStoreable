package ru.fizteh.fivt.students.tonmit.storeable.util;

public enum EnumStoreable {
    INT(Integer.class, "int"),
    DOUBLE(Double.class, "double"),
    BYTE(Byte.class, "byte"),
    STRING(String.class, "String"),
    LONG(Long.class, "long"),
    BOOLEAN(Boolean.class, "boolean"),
    FLOAT(Float.class, "float");

    private final Class<?> boxedClass;
    private final String printedName;

    private EnumStoreable(Class<?> type, String name) {
        boxedClass = type;
        printedName = name;
    }

    public static EnumStoreable withPrintedName(String name) {
        for (EnumStoreable type : EnumStoreable.values()) {
            if (type.getPrintedName().equals(name)) {
                return type;
            }
        }
        throw new EnumConstantNotPresentException(EnumStoreable.class, name);
    }

    public static EnumStoreable fromBoxedClass(Class<?> cls) {
        for (EnumStoreable type : EnumStoreable.values()) {
            if (type.getBoxedClass().equals(cls)) {
                return type;
            }
        }
        throw new EnumConstantNotPresentException(EnumStoreable.class, cls.getSimpleName());
    }

    @Override
    public String toString() {
        return getPrintedName();
    }

    public Class<?> getBoxedClass() {
        return boxedClass;
    }

    public String getPrintedName() {
        return printedName;
    }
}
